{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skills Configuration Schema",
  "description": "Schema for validating skills.yml files in call-me-cloud",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the skills configuration",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "Human-readable description",
      "maxLength": 500
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "skills": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "builtin": {
          "type": "array",
          "description": "Built-in Claude Code capabilities (enabled via Skill tool)",
          "maxItems": 20,
          "items": {
            "type": "string",
            "description": "Built-in skill name (e.g., docx, xlsx, pptx, pdf)",
            "pattern": "^[a-z0-9-]+$",
            "maxLength": 50
          }
        },
        "plugins": {
          "type": "array",
          "description": "External plugins to load from marketplace",
          "maxItems": 10,
          "items": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "Plugin identifier in org/name format",
                "pattern": "^[a-z0-9-]+/[a-z0-9-]+$",
                "maxLength": 100
              },
              "description": {
                "type": "string",
                "maxLength": 200
              },
              "skills": {
                "type": "array",
                "description": "Specific skills to enable from this plugin",
                "maxItems": 20,
                "items": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+$",
                  "maxLength": 50
                }
              }
            }
          }
        },
        "project": {
          "type": "array",
          "description": "Project-level custom skills from .claude/skills/",
          "maxItems": 20,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9_-]*$",
            "maxLength": 50
          }
        },
        "system_deps": {
          "type": "array",
          "description": "System packages to install (must be on allowlist)",
          "maxItems": 30,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9+.-]*$",
            "maxLength": 100
          }
        },
        "python_deps": {
          "type": "array",
          "description": "Python packages with version constraints",
          "maxItems": 50,
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9._-]*(\\[.*\\])?(>=|<=|==|~=|!=|>|<)?[0-9a-zA-Z.,*]*$",
            "maxLength": 200
          }
        }
      }
    },
    "capabilities": {
      "type": "array",
      "description": "Declared capabilities for documentation",
      "maxItems": 50,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$",
        "maxLength": 50
      }
    }
  }
}
