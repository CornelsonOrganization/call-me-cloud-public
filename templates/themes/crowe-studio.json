{
  "name": "Crowe Studio",
  "description": "Official Crowe Studio branding for AI/Innovation practice",
  "version": "2.0.0",
  "colors": {
    "primary": "D38938",
    "secondary": "0F2D5E",
    "accent": "48A188",
    "warning": "F3BC44",
    "danger": "B02418",
    "neutral": {
      "black": "000000",
      "dark": "333333",
      "medium": "666666",
      "light": "CCCCCC",
      "lighter": "E0E0E0",
      "lightest": "F5F5F5",
      "white": "FFFFFF"
    },
    "phases": {
      "Build": "48A188",
      "Validate": "F3BC44",
      "Deploy": "D38938",
      "Adopt": "0F2D5E",
      "Scale": "CCCCCC"
    },
    "status": {
      "success": "48A188",
      "warning": "F3BC44",
      "error": "B02418",
      "info": "55C5E9",
      "neutral": "CCCCCC"
    }
  },
  "typography": {
    "fontFamily": "Arial",
    "sizes": {
      "title": 48,
      "header": 24,
      "subheader": 18,
      "body": 14,
      "caption": 12,
      "small": 10,
      "tiny": 8
    },
    "weights": {
      "regular": false,
      "bold": true
    }
  },
  "layout": {
    "slide": {
      "width": 10,
      "height": 5.625
    },
    "margins": {
      "top": 0.5,
      "right": 0.5,
      "bottom": 0.5,
      "left": 0.5
    },
    "header": {
      "x": 0.16,
      "y": 0.28,
      "height": 0.4,
      "fontSize": 24
    },
    "content": {
      "startY": 1.0,
      "endY": 5.2
    },
    "footer": {
      "y": 5.3,
      "height": 0.2
    }
  },
  "tables": {
    "header": {
      "fill": "D38938",
      "color": "FFFFFF",
      "bold": true
    },
    "rows": {
      "even": "FFFFFF",
      "odd": "F5F5F5"
    },
    "border": {
      "type": "solid",
      "width": 0.5,
      "color": "CCCCCC"
    }
  },
  "shapes": {
    "border": {
      "maxWidth": 1.5,
      "defaultWidth": 1,
      "color": "CCCCCC"
    },
    "shadow": false,
    "rounded": false,
    "effects": {
      "bevel": false,
      "reflection": false,
      "glow": false
    }
  },
  "charts": {
    "colors": [
      "D38938",
      "0F2D5E",
      "48A188",
      "F3BC44",
      "55C5E9",
      "B02418"
    ],
    "gridlines": {
      "show": true,
      "color": "E0E0E0",
      "width": 0.5
    }
  },
  "bullets": {
    "type": "square",
    "color": "D38938"
  },
  "rules": [
    "Headers must be positioned at (0.16\", 0.28\") with 24pt font",
    "Use Orange (D38938) as primary brand color, not red",
    "Tables must have orange headers with white text",
    "No rounded rectangles or shadows in shapes",
    "Minimum font size is 9pt (7pt for dense labels only)",
    "All elements must fit within 10\" x 5.625\" slide bounds",
    "Bullets must be orange squares only",
    "All fonts must be Arial (body) or Arial Black (headings)"
  ]
}
